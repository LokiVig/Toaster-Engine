<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<TargetFramework>net9.0</TargetFramework>
		<GenerateAssemblyInfo>false</GenerateAssemblyInfo>
		<BaseOutputPath>$(SolutionDir)build\</BaseOutputPath>
		<PlatformTarget>AnyCPU</PlatformTarget>
		<RootNamespace>Toast.Engine</RootNamespace>
		<AllowUnsafeBlocks>True</AllowUnsafeBlocks>
		<AssemblyName>$(ProjectName)</AssemblyName>
		<GenerateDocumentationFile>False</GenerateDocumentationFile>
		<DocumentationFile>$(OutputDir)</DocumentationFile>
	</PropertyGroup>
	<PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
		<OutputPath>$(SolutionDir)build\$(Configuration)</OutputPath>
		<PlatformTarget>AnyCPU</PlatformTarget>
	</PropertyGroup>
	<PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
		<OutputPath>$(SolutionDir)build\$(Configuration)</OutputPath>
		<PlatformTarget>AnyCPU</PlatformTarget>
	</PropertyGroup>
	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
		<IsTrimmable>False</IsTrimmable>
	</PropertyGroup>
	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
		<IsTrimmable>False</IsTrimmable>
	</PropertyGroup>
	<ItemGroup>
	  <PackageReference Include="System.Windows.Extensions" Version="9.0.0" />
	</ItemGroup>
	<Target Name="PostBuild" AfterTargets="PostBuildEvent">
		<Exec Command="xcopy /E /S /Y &quot;$(ProjectDir)\src\resources\rendering\shaders\*&quot; &quot;$(OutDir)resources\shaders\&quot;" />
		<Exec Command="xcopy /E /S /Y &quot;$(ProjectDir)\src\resources\rendering\textures\*&quot; &quot;$(OutDir)resources\textures\&quot;" />
		<Exec Command="xcopy /E /S /Y &quot;$(ProjectDir)\src\resources\rendering\fonts\*&quot; &quot;$(OutDir)resources\fonts\&quot;" />

		<Exec Command="xcopy /E /S /Y &quot;$(ProjectDir)\src\resources\audio\*&quot; &quot;$(OutDir)resources\audio\&quot;" />
	</Target>
</Project>