<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<TargetFramework>net9.0</TargetFramework>
		<GenerateAssemblyInfo>false</GenerateAssemblyInfo>
		<BaseOutputPath>$(SolutionDir)build\</BaseOutputPath>
		<PlatformTarget>AnyCPU</PlatformTarget>
		<RootNamespace>Toast.Engine</RootNamespace>
		<AllowUnsafeBlocks>True</AllowUnsafeBlocks>
		<AssemblyName>$(ProjectName)</AssemblyName>
		<GenerateDocumentationFile>False</GenerateDocumentationFile>
		<DocumentationFile>$(OutputDir)</DocumentationFile>
	</PropertyGroup>
	<PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
		<OutputPath>$(SolutionDir)build\$(Configuration)</OutputPath>
		<PlatformTarget>AnyCPU</PlatformTarget>
	</PropertyGroup>
	<PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
		<OutputPath>$(SolutionDir)build\$(Configuration)</OutputPath>
		<PlatformTarget>AnyCPU</PlatformTarget>
	</PropertyGroup>
	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
		<IsTrimmable>False</IsTrimmable>
	</PropertyGroup>
	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
		<IsTrimmable>False</IsTrimmable>
	</PropertyGroup>
	<ItemGroup>
	  <Folder Include="src\tools\" />
	</ItemGroup>
	<Target Name="PostBuild" AfterTargets="PostBuildEvent">
		<!-- Rendering -->
		<Exec Command="xcopy /E /S /Y &quot;$(ProjectDir)src\resources\rendering\*&quot; &quot;$(OutDir)resources\&quot;" />

		<!-- Audio -->
		<Exec Command="xcopy /E /S /Y &quot;$(ProjectDir)src\resources\audio\*&quot; &quot;$(OutDir)resources\audio\&quot;" />
	</Target>
</Project>